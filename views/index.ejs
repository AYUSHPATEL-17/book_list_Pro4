<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">


   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
  <title>BookStore</title>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>

    .search-bar {
      background: linear-gradient(135deg, #fdfbfb 0%, #ebedee 100%);
      padding: 40px 0;
    }

    .search-bar input {
      max-width: 600px;
      margin: 0 auto;
    }

    .book-card img {
      height: 200px;
      object-fit: cover;
    }

    .footer {
      background: #f8f9fa;
      padding: 20px 0;
      text-align: center;
    }
  
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #333;
        padding: 12px 24px;
        color: white;
    }

    .header .logo {
        font-size: 24px;
        font-weight: bold;
    }

    .header nav {
        display: flex;
        gap: 15px;
    }

    .header nav a {
        color: white;
        text-decoration: none;
        padding: 5px 10px;
        transition: background-color 0.3s;
        font-size: 20px;
    }

    .header nav a:hover {
        background: linear-gradient(90deg, #12C2E9 0%, #c471ed 50%, #f64f59 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .header .search-container {
        display: flex;
        align-items: center;
    }

    .header .search-container input[type="text"] {
        padding: 5px;
        border: none;
        border-radius: 3px;
    }

    .header .search-container button {
        padding: 5px 10px;
        border: none;
        border-radius: 3px;
        background: rgb(2, 0, 36);
        background: linear-gradient(270deg, rgba(2, 0, 36, 1) 0%, rgba(9, 9, 121, 1) 35%, rgba(0, 212, 255, 1) 100%);
        color: white;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .header .search-container button:hover {
        background-color: #ffffff;
        color: linear-gradient(270deg, rgba(2, 0, 36, 1) 0%, rgba(9, 9, 121, 1) 35%, rgba(0, 212, 255, 1) 100%);
    }

    .bg-grad {
        background: rgb(238, 174, 202);
        /* backdrop-filter: blur(10px); */
        background: radial-gradient(circle, rgba(238, 174, 202, 1) 0%, rgba(148, 187, 233, 1) 100%);
    }

    .bg-grad-btn {

        transition: all 0.5s linear;
        /* background: rgb(2, 0, 36); */
        background: linear-gradient(270deg, rgba(2, 0, 36, 1) 0%, rgba(9, 9, 121, 1) 35%, rgba(0, 212, 255, 1) 100%);
    }

    .bg-grad-btn:hover {
        /* background: rgb(2, 0, 36); */
        background-color: white;
        color: linear-gradient(270deg, rgba(2, 0, 36, 1) 0%, rgba(9, 9, 121, 1) 35%, rgba(0, 212, 255, 1) 100%);
    }
    .book-form{
      /* background-color: gray; */
      /* backdrop-filter: blur(15px); */
      background-color: rgba(255, 255, 255, 0.4);
  -webkit-backdrop-filter: blur(5px);
  backdrop-filter: blur(5px);
    }

    .bg-grade-2{
      background: rgb(2,0,36);
background: linear-gradient(270deg, rgba(2,0,36,1) 0%, rgba(9,9,121,1) 35%, rgba(0,212,255,1) 100%);
    }
    .bk-card{
      background-color: rgba(255, 255, 255, 0.4);
  -webkit-backdrop-filter: blur(10px);
  backdrop-filter: blur(10px);
    }

    .css-selector {
    background: linear-gradient(297deg, #3b4542, #897d65, #2f89c6, #2357d7, #1e5cf3, #1625f2, #0819f9, #7113f3, #924ff0, #e044e8, #ed70f3, #ed92f2, #e8a9ec, #a8f0e4, #b7f288, #f0ed69, #db534b, #f3731c, #acf31c, #1cf3cf, #f31cb2, #f559c6, #e467a8, #ffffff);
    background-size: 4800% 4800%;

    -webkit-animation: AnimationName 43s ease infinite;
    -moz-animation: AnimationName 43s ease infinite;
    -o-animation: AnimationName 43s ease infinite;
    animation: AnimationName 43s ease infinite;
}

@-webkit-keyframes AnimationName {
    0%{background-position:4% 0%}
    50%{background-position:97% 100%}
    100%{background-position:4% 0%}
}
@-moz-keyframes AnimationName {
    0%{background-position:4% 0%}
    50%{background-position:97% 100%}
    100%{background-position:4% 0%}
}
@-o-keyframes AnimationName {
    0%{background-position:4% 0%}
    50%{background-position:97% 100%}
    100%{background-position:4% 0%}
}
@keyframes AnimationName {
    0%{background-position:4% 0%}
    50%{background-position:97% 100%}
    100%{background-position:4% 0%}
}
</style>

</head>

<body>
 <header class="header">
        <div class="logo">BookStore</div>
        <nav>
            <a href="#home">Home</a>
            <a href="#about">About Us</a>
            <a href="#contact">Contact</a>
            <a href="#shop">Shop</a>
        </nav>
        <div class="search-container">
            <input type="text" placeholder="Search...">&nbsp &nbsp
            <button type="button btn btn-danger">Search</button>
        </div>
    </header>

  <section class="search-section  py-5 bg-grad ">
    <div class="container">
      <h1 class="mb-4">
        Find the book <br /><strong>you've been looking for</strong>
      </h1>
      <form class="form-inline">
        <input
          class="form-control form-control-lg mr-2"
          type="search"
          placeholder="Search by book title"
          aria-label="Search"
        />
        <button class="bg-grad-btn  btn  text-white border-0  btn-lg" type="submit">Search</button>


      </form>


      <!-- --------Form---start---------------- -->


      <div class="container form-container mt-5">
        <div class="row justify-content-center">
          <div class="col-md-8 ">
            <div class="card book-form shadow ">
              <div class="card-header text-center">
                <h2 class="form-title">Enter Book Data</h2>
              </div>
              <div class="card-body">
                <form action="" method="post">
                  <div class="form-group row">
                    <label for="url" class="col-sm-3 col-form-label">URL</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" id="url" name="url" placeholder="Enter book image URL">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="title" class="col-sm-3 col-form-label">Title</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" id="title" name="title" placeholder="Enter book title">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="author" class="col-sm-3 col-form-label">Author</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" id="author" name="author" placeholder="Enter book author">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="summary" class="col-sm-3 col-form-label">Summary</label>
                    <div class="col-sm-9">
                      <textarea class="form-control" id="summary" name="summary" rows="3"
                        placeholder="Enter book summary"></textarea>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="price" class="col-sm-3 col-form-label">Price</label>
                    <div class="col-sm-9">
                      <input type="number" class="form-control" id="price" name="price" placeholder="Enter book price">
                    </div>
                  </div>
                  <div class="form-group row">
                    <div class="col-sm-9 offset-sm-3">
                      <button type="submit" class="bg-grad-btn  btn  text-white border-0 ">Submit</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- --------Form---End---------------- -->
    </div>
  </section>

 

<hr/>
  <div class="container-fluid  css-selector">
    <div class="row">
      <% bookstore.map(book=> {
        <!-- let {url,title,author,summary,price,} = book -->
        %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card book-card bg-light shadow mt-3">
            <img src="<%= book.url %>" class="card-img-top p-2" alt="<%= book.title %>">
            
            <div class="card-body">
              <h5 class="card-title">
                <%= book.title %>
              </h5>
              <p class="card-text">
                <%= book.author %><br>
                  <%= book.summary.substring(0, 100) %>...
              </p>
              
            </div>
            <div class="mt-3 mb-3 ml-4">
              <a href="/deleteData?id=<%=book._id%>" class="btn btn-danger mr-2">Delete</a>
              <a href="/editData?id=<%=book._id%>" class="bg-grad-btn  btn  text-white border-0">Edit</a>
          </div>
          </div>
        </div>
        <% }) %>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="bookModal" tabindex="-1" role="dialog" aria-labelledby="bookModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="bookModalLabel">Book Details</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <h5 id="modalTitle"></h5>
          <p><strong>Author: </strong><span id="modalAuthor"></span></p>
          <p id="modalSummary"></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    $('#bookModal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      var title = button.data('title');
      var author = button.data('author');
      var summary = button.data('summary');

      var modal = $(this);
      modal.find('.modal-title').text(title);
      modal.find('#modalTitle').text(title);
      modal.find('#modalAuthor').text(author);
      modal.find('#modalSummary').text(summary);
    });
  </script>
</body>

</html>